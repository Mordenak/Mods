<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<!-- RW Defaults: 1
	-->

	<Operation Class="PatchOperationReplace">
		<xpath>
			/Defs/StatDef[defName="MiningYield" or defName="PlantHarvestYield" or defName="AnimalGatherYield"]/maxValue
		</xpath>
		<value>
			<maxValue>2</maxValue>
		</value>
	</Operation>

	<!-- Fix Trade Impact -->

	<Operation Class="PatchOperationReplace">
		<xpath>
			/Defs/StatDef[defName="TradePriceImprovement"]/capacityFactors/li/max
		</xpath>
		<value>
			<max>1.2</max>
		</value>
	</Operation>

	<!-- Nerf Vanilla Bionics Cost -->
	<Operation Class="PatchOperationReplace">
		<xpath>
			/Defs/ThingDef[defName="BionicEye" or defName="BionicArm" or defName="BionicLeg" or defName="BionicSpine" or defName="BionicHeart"]/costList/ComponentSpacer
		</xpath>
		<value>
			<ComponentIndustrial>8</ComponentIndustrial>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>
			/Defs/ThingDef[defName="BionicStomach" or defName="BionicEar"]/costList/ComponentSpacer
		</xpath>
		<value>
			<ComponentIndustrial>6</ComponentIndustrial>
		</value>
	</Operation>

</Patch>
<configs>

	<!-- Fix birds nests: -->
	<set xpath="/lootcontainers/lootgroup[@name='groupBirdNest']/item[@name='resourceFeather']/@count">5,20</set>
	<set xpath="/lootcontainers/lootgroup[@name='groupBirdNest']/item[@name='foodEgg']/@prob">0.4</set>

	<append xpath="/lootcontainers/lootgroup[@name='modGunT2']">
		<item name="modGunSteelHammer"/>
		<item name="modGunBowHighTensionString"/>
	</append>

	<append xpath="/lootcontainers/lootgroup[@name='modGunT3']">
		<item name="modGunTitaniumHammer"/>
	</append>

	<append xpath="/lootcontainers/lootgroup[@name='workingStiffsSub']">
		<item name="meleeToolPickaxeTitanium" prob="0.07"/>
	</append>

	<!-- <append xpath="/lootcontainers/lootgroup[@name='groupQuestTools']">
		<item name="meleeToolPickaxeTitanium" loot_prob_template="GradeCLoot"/>
	</append> -->

	<!-- groupQuestMods -->

	<!-- Add in the legendary drops to only chests: -->
	<insertBefore xpath="/lootcontainers/lootgroup[@name='groupHeroChestLootSub']">
		<lootgroup name="groupLegendaries">
			<item name="modArmorTheDistance" prob="0.4"/>
			<item name="modArmorMotionActuators" prob="0.4"/>
			<!-- <item name="meleeToolPickaxeTitanium"/> -->
		</lootgroup>
	</insertBefore>

	<append xpath="/lootcontainers/lootgroup[@name='groupHeroChestLootSub']">
		<item group="groupLegendaries" prob="0.01"/>
	</append>

	<!-- Make player dropped bags bigger to accomodate new size-->
	<set xpath="/lootcontainers/lootcontainer[@id='2']/@size">8,10</set>

</configs>